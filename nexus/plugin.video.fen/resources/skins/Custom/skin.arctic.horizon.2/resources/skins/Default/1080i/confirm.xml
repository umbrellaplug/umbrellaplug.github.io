<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">common/white.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="120" />
            </animation>
        </control>
        <control type="group">
            <left>570</left>
            <top>300</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" end="100" time="200" />
            </animation>
            <control type="image">
                <height>480</height>
                <width>780</width>
                <include>Texture_Dialog</include>
            </control>
            <control type="image">
                <left>7</left>
                <top>7</top>
                <width>45</width>
                <height>45</height>
                <align>left</align>
                <aligny>top</aligny>
                <aspectratio aligny="top">keep</aspectratio>
                <texture colordiffuse="dialog_fg_70">common/fen.png</texture>
            </control>
            <control type="label">
                <width max="560">auto</width>
                <top>-60</top>
                <left>110</left>
                <height>20</height>
                <font>font_head_bold</font>
                <textcolor>FFCCCCCC</textcolor>
                <align>center</align>
                <label>$INFO[Window().Property(heading)]</label>
            </control>
            <control type="textbox">
                <left>40</left>
                <top>60</top>
                <width>720</width>
                <height>280</height>
                <font>font13</font>
                <textcolor>dialog_fg_70</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <label>$INFO[Window.Property(text)]</label>
            </control>
            <control type="button" id="10">
                <description>True</description>
                <top>380</top>
                <left>35</left>
                <width>340</width>
                <height>85</height>
                <onleft>11</onleft>
                <onright>11</onright>
                <label>$INFO[Window.Property(ok_label)]</label>
                <font>font_mini</font>
                <textcolor>dialog_fg_70</textcolor>
                <focusedcolor>$VAR[ColorSelected]</focusedcolor>
                <disabledcolor>dialog_fg_30</disabledcolor>
                <include>Texture_Button</include>
                <pulseonselect>false</pulseonselect>
            </control>
            <control type="button" id="11">
                <description>False</description>
                <top>380</top>
                <left>400</left>
                <width>340</width>
                <height>85</height>
                <onleft>10</onleft>
                <onright>10</onright>
                <label>$INFO[Window.Property(cancel_label)]</label>
                <font>font_mini</font>
                <textcolor>dialog_fg_70</textcolor>
                <focusedcolor>$VAR[ColorSelected]</focusedcolor>
                <disabledcolor>dialog_fg_30</disabledcolor>
                <include>Texture_Button</include>
                <pulseonselect>false</pulseonselect>
            </control>
        </control>
    </controls>
</window>
